{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}
{% block field %}
{% spaceless %}
    {% if object.type is constant('App\Application\Lexxpavlov\\SettingsBundle\\DBAL\\SettingsType::Boolean') %}
        {% if object.value %}
            <i class="fa fa-check"></i> {% trans %}On{% endtrans %}
        {% else %}
            <i class="fa fa-times"></i> {% trans %}Off{% endtrans %}
        {% endif %}
    {% else %}
        {{ object.value[:80] }}
    {% endif %}
{% endspaceless %}
{% endblock %}